@model Dish

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Add a Dish!</h1>
</div>
<br>

<form action="/processNewDish" method="post">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label># of Calories</label>
                <input type="text" class="form-control" asp-for="Calories">
                <span asp-validation-for="Calories"></span>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Chef</label>
                <select class="form-control" asp-for="ChefId">
                    @{
                        foreach (var chef in ViewBag.All)
                        {
                            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                        }
                    }
                </select>
                <span asp-validation-for="ChefId"></span>
            </div>
            <div class="form-group">
                <label>Tastiness</label>
                <select class="form-control" asp-for="Tastiness">
                    <option></option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span asp-validation-for="Tastiness"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="Add Dish">
        </div>
    </div>
</form>

